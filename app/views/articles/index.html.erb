<div class="text-center">
  <h1>Articles#index</h1>
  <p>Find me in app/views/articles/index.html.erb</p>

  <%= link_to 'create new article', new_article_path  %> <br>

  <% @articles.each do |article| %>
    <%= link_to article.title, article_path(article)  %>
    <p><%= article.content %></p>
    <%= link_to 'edit article', edit_article_path(article)  %> <br>
    <%= link_to 'delete article', :method => "delete"  %> <br>
  <% end %>
</div>
